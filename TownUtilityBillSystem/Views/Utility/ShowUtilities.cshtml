@model TownUtilityBillSystem.Models.UtilityModel

@{
    ViewBag.Title = "ShowUtilities";
    int i = 0;
}
<link rel="stylesheet" href="/Content/myStyles.css" />

<div class="jumbotron">
    <h3><strong>Utilities:</strong></h3>
    <div class="row">
        <div class="col-md-6 margin-top-20">
            <a href="@Url.Action("ShowAllUtilitiesPrices", "Utility")" class="btn btn-primary btn-large btn-block">
                <span class=" glyphicon glyphicon-list"></span> Show all utilities
            </a>
        </div>
    </div>
    <br>    
   
    <div class="row">
        <div class="col-md-6 margin-top-20">
            <a href="@Url.Action("ShowUtility", "Utility", new { utilityName = @Model.Utilities[i].Name }, null)" class="btn btn-primary btn-large btn-block">
                <span class=" glyphicon glyphicon-flash"></span> @Model.Utilities[i++].Name                  
            </a>
            <a href="@Url.Action("ShowUtility", "Utility", new { utilityName = @Model.Utilities[i].Name }, null)" class="btn btn-primary btn-large btn-block">
                <span class=" glyphicon glyphicon-tint"></span> @Model.Utilities[i++].Name
            </a>
          
        </div>
        <div class="col-md-6 margin-top-20">
            <a href="@Url.Action("ShowUtility", "Utility", new { utilityName = @Model.Utilities[i].Name }, null)" class="btn btn-primary btn-large btn-block">
                <span class=" glyphicon glyphicon-asterisk"></span> @Model.Utilities[i++].Name
            </a>
            <a href="@Url.Action("ShowUtility", "Utility", new { utilityName = @Model.Utilities[i].Name }, null)" class="btn btn-primary btn-large btn-block">
                <span class=" glyphicon glyphicon-fire"></span> @Model.Utilities[i].Name
            </a>            
        </div>

    </div>
    <h3><strong>Meters:</strong></h3>
    <div class="row">
        <div class="col-md-6 margin-top-20">
            <a href="@Url.Action("ShowAllMeterTypes", "Meter")" class="btn btn-primary btn-large btn-block" style="background-color:green">
                <span class=" glyphicon glyphicon-list"></span> Meter types
            </a>
            <a href="@Url.Action("ShowRandomMeters", "Meter")" class="btn btn-primary btn-large btn-block" style="background-color:green">
                <span class=" glyphicon glyphicon-dashboard"></span> Meters
            </a>
        </div>
        <div class="col-md-6 margin-top-20">
            <a href="@Url.Action("FindMetersBy", "Meter")" class="btn btn-primary btn-large btn-block" style="background-color:green">
                <span class=" glyphicon glyphicon-search"></span> Find meter by details
            </a>
            <a href="@Url.Action("FindMeterByAddress", "Meter")" class="btn btn-primary btn-large btn-block" style="background-color:green">
                <span class=" glyphicon glyphicon-search"></span> Find meter by address
            </a>
        </div>
    </div>
    <hr />
    <a href="javascript:history.go(-1)" class="btn btn-link btn-large">
        <span class=" glyphicon glyphicon-arrow-left"></span> <strong>Back to previous page</strong>
    </a>
</div>
