@model TownUtilityBillSystem.Models.News.NewsModel
@{
    ViewBag.Title = "ShowSingleNews";
}


<h3 align="center"><strong>@Model.SingleNews.Title</strong> </h3>
<p align="right">@Model.SingleNews.Date.ToString("dd.MM.yyyy HH:mm")</p>

@{
    foreach (var item in Model.SingleNews.NewsChapters)
    {
        <p>@item.Text</p>
        <br />
    }
}
<div>
    <text>For additional information, please contact:</text><br />
    <text>@Model.NewsEmployee.Name</text><br />
    <text>@Model.NewsEmployee.PhoneNumber</text><br />
    <text>@Model.NewsEmployee.Email</text>
    <br />
</div>
<br />

<a href="@Url.Action("News","Home")" class="btn btn-link btn-large">
    <span class=" glyphicon glyphicon-list"></span> <strong>All news</strong>
</a>
<br />


<a href="javascript:history.go(-1)" class="btn btn-link btn-large">
    <span class=" glyphicon glyphicon-arrow-left"></span> <strong>Back to home page</strong>
</a>
