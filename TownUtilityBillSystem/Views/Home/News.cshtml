@model TownUtilityBillSystem.Models.News.NewsModel
@{
    ViewBag.Title = "News";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" style="width:700px; margin:0 auto;">
        <h2><strong>News</strong></h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:689px;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @{
                    for (int i = 0; i < Model.NewsList.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#myCarousel" data-slide-to=@i class="active"></li>
                        }
                        else
                        {
                            <li data-target="#myCarousel" data-slide-to=@i></li>
                        }
                    }
                }
                
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @{
                    for (int i = 0; i < Model.NewsList.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="item   active">
                                <img src=@Model.NewsList[i].ImagePath />
                                <div class="carousel-caption">
                                    <p style="color:white"><strong>@Model.NewsList[i].Title</strong></p>
                                    <a style="color:white" href="@Url.Action("ShowSingleNews", "Home", new { newsId = @Model.NewsList[i].Id}, null)"> <span class="glyphicon glyphicon-eye-open"></span> <strong>Read more...</strong></a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src=@Model.NewsList[i].ImagePath />
                                <div class="carousel-caption">
                                    <p style="color:white"><strong>@Model.NewsList[i].Title</strong></p>
                                    <a style="color:white" href="@Url.Action("ShowSingleNews", "Home", new { newsId = @Model.NewsList[i].Id}, null)"> <span class="glyphicon glyphicon-eye-open"></span> <strong>Read more...</strong></a>
                                </div>
                            </div>
                        }
                    }
                }

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <hr />
    <div style="width:900px; margin:0 auto;">
        @{ 
            for (int i = 0; i < Model.NewsList.Count; i++)
            {                
                <a style="color:black" href="@Url.Action("ShowSingleNews", "Home", new { newsId = @Model.NewsList[i].Id}, null)"> @Model.NewsList[i].Date.ToString("dd.MM.yyyy HH:mm") -- <strong>@Model.NewsList[i].Title</strong></a>
                <br />
            }
        }
    </div>
    <br />
    <a href="@Url.Action("Index","Home")" class="btn btn-link btn-large">
        <span class=" glyphicon glyphicon-home"></span> <strong>Back to home page</strong>
    </a>
    <br />


    <a href="javascript:history.go(-1)" class="btn btn-link btn-large">
        <span class=" glyphicon glyphicon-arrow-left"></span> <strong>Back previous page</strong>
    </a>


</body>
</html>
