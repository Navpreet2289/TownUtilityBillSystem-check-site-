@model TownUtilityBillSystem.Models.News.NewsModel
@{
    ViewBag.Title = "Home Page";
}

@if (Request.IsAuthenticated)
{
    <div class="jumbotron">
        <h3><strong>Choose the next facility:</strong></h3>

        <div class="row">
            <div class="col-md-6 margin-top-20">
                <a href="@Url.Action("ShowUtilities", "Utility")" class="btn btn-primary btn-large btn-block">
                    <span class=" glyphicon glyphicon-flash"></span> Utilities
                </a>
                <a href="@Url.Action("ShowCustomerMenu", "Customer")" class="btn btn-primary btn-large btn-block">
                    <span class=" glyphicon glyphicon-user"></span> Customers
                </a>
                <a href="@Url.Action("ShowStatisticMenu", "Statistic")" class="btn btn-primary btn-large btn-block">
                    <span class=" glyphicon glyphicon-dashboard"></span> Statistic
                </a>
            </div>
            <div class="col-md-6 margin-top-20">
                <a href="@Url.Action("ShowBills", "Bill")" class="btn btn-primary btn-large btn-block">
                    <span class=" glyphicon glyphicon-list-alt"></span> Bills
                </a>
                <a href="@Url.Action("PayOnLineBill", "Bill")" class="btn btn-primary btn-large btn-block">
                    <span class=" glyphicon glyphicon-usd"></span> Pay on-line
                </a>
                <a href="@Url.Action("ShowCalculatorOnLine", "Calculator")" class="btn btn-primary btn-large btn-block">
                    <span class=" glyphicon glyphicon-usd"></span> Calculator on-line
                </a>
            </div>
        </div>
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        </head>
        <body>

            <div class="container" style="width:820px; margin:0 auto;">            
                <h4><strong>News</strong></h4>
                <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:800px;">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">    s                     
                        @{
                            for (int i = 0; i < Model.NewsList.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#myCarousel" data-slide-to= @i class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#myCarousel" data-slide-to=@i></li>
                                }
                            }
                        }                        
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        @{
                            for (int i = 0; i < Model.NewsList.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <div class="item   active">
                                        <img src=@Model.NewsList[i].ImagePath />
                                        <div class="carousel-caption">
                                            <p style="color:white"><strong>@Model.NewsList[i].Title</strong></p>
                                            <a style="color:white" href="@Url.Action("ShowSingleNews", "Home", new { newsId = @Model.NewsList[i].Id}, null)"> <span class="glyphicon glyphicon-eye-open"></span> <strong>Read more...</strong></a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <img src=@Model.NewsList[i].ImagePath />
                                        <div class="carousel-caption">
                                            <p style="color:white"><strong>@Model.NewsList[i].Title</strong></p>
                                            <a style="color:white" href="@Url.Action("ShowSingleNews", "Home", new { newsId = @Model.NewsList[i].Id}, null)"> <span class="glyphicon glyphicon-eye-open"></span> <strong>Read more...</strong></a>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </body>
    </html>

    </div>
}
else
{
    <h2><strong>Town Utility Bill System</strong></h2>
    <h3><strong>Please, log in or register.</strong></h3>
}


